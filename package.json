{
  "name": "vscode-rufo",
  "displayName": "rufo",
  "description": "Ruby formatter",
  "version": "0.0.1",
  "publisher": "mbessey",
  "engines": {
    "vscode": "^1.13.0"
  },
  "categories": ["Formatters"],
  "keywords": ["ruby", "rufo", "formatting"],
  "activationEvents": ["onCommand:extension.formatRuby", "onLanguage:ruby"],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.formatRuby",
        "title": "Format ruby file"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Rufo configuration",
      "properties": {
        "rufo.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Wether to format on every save or not."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "mocha": "^2.3.3",
    "tslint": "^5.5.0",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  },
  "dependencies": {
    "@types/node": "^8.0.9"
  }
}
